<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xaohii.api.repository.mapper.UserInfoMapper">
    <resultMap id="BaseResultMap" type="cn.xaohii.api.repository.entity.UserInfo">
        <result column="user_name" property="userName" />
        <result column="user_id" property="userId" />
        <result column="passwd" property="passwd" />
        <result column="mail" property="mail" />
        <result column="phone" property="phone" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>


    <select id="queryAllUserInfo" resultMap="BaseResultMap">
        select * from user_info;
    </select>

    <insert id="insertUserData" parameterType="cn.xaohii.api.repository.entity.UserInfo">
        insert into user_info (user_id, user_name, mail, passwd, phone, create_time, update_time)
        values (#{userId}, #{userName}, #{mail}, #{passwd}, #{phone}, #{createTime}, #{updateTime})
    </insert>
</mapper>